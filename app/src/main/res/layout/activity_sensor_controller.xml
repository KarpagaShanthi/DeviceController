<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="maxpi.devicecontroller.SensorController">

    <Button
        android:id="@+id/get_distance"
        android:layout_width="255dp"
        android:layout_height="74dp"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="71dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="104dp"
        android:background="@android:color/holo_orange_light"
        android:text="@string/get_distance"
        app:layout_constraintBottom_toTopOf="@+id/distance_display"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/distance_display"
        android:layout_width="182dp"
        android:layout_height="54dp"
        android:layout_marginBottom="178dp"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="112dp"
        android:text="@string/distance_calculated"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/distance"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="94dp"
        android:layout_marginEnd="84dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distance_display"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
